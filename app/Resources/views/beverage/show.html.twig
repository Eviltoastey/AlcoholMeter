{% extends 'base.html.twig' %}

{% block body %}
    <h1>Beverage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ beverage.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ beverage.name }}</td>
            </tr>
            <tr>
                <th>Alcohol</th>
                <td>{{ beverage.alcohol }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ beverage.amount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('beverage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('beverage_edit', { 'id': beverage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
